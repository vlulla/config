-- Comments start with --
--
-- File location:
--     Linux: ~/.psqlrc
--     Windows: %AppData%/postgresql/psqlrc.conf

\set QUIET 1

-- Find the variables you can set in documentation of `psql` under PostgreSQL Client Applications
-- in the manual (part VI. Reference)
\set COMP_KEYWORD_CASE 'upper'
\set ECHO 'errors'
\set ECHO_HIDDEN 'on'
\set ON_ERROR_STOP 'on'
\set ON_ERROR_ROLLBACK 'interactive'
\set VERBOSITY 'verbose'
\set HISTCONTROL 'ignoreboth'
\set HISTSIZE 20000
\set PROMPT1 '%~ %x%# '
\pset expanded 'auto'
\pset null âˆ…
\pset linestyle 'unicode'
\pset border 2

SET DateStyle='ISO, MDY';
SET IntervalStyle='iso_8601';
SET statement_timeout=5000;

-- A neat idea from https://opensourcedbms.com/dbms/psqlrc-psql-startup-file-for-postgres/
\echo 'Some custom extra commands:\n'
\echo '   :dbsize      --  Database size'
\echo '   :rows        --  # rows in all tables (Run VACUUM if many tables have 0 rows)'
\echo '   :settings    --  Server settings'
\echo '   :sp          --  SHOW search_path;\n'
\echo 'Type \\set to see how these are defined.\n\n'
\set dbsize 'select datname,pg_size_pretty(pg_database_size(datname)) db_size from pg_database order by db_size;'
\set rows 'select table_schema as schema, table_name as table, reltuples as numrows from information_schema.tables join pg_class on relname = table_name where table_schema not in (''pg_catalog'',''information_schema'') and table_type=''BASE TABLE'';'
\set settings 'select name,setting,source,short_desc from pg_settings;'
\set sp 'SHOW search_path;'

\timing on
\x auto
\unset QUIET
