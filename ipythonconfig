## See https://ipython.readthedocs.io/en/stable/config/intro.html

## To create blank config files run: ipython profile create [profilename]

c = get_config()

c.TerminalIPythonApp.display_banner = False

c.InteractiveShellApp.exec_lines = ['import numpy as np,hypothesis as hy',
  'import hypothesis.strategies as st', 'import matplotlib.pyplot as plt']

c.InteractiveShell.autoindent = True
c.InteractiveShell.automagic = False
c.InteractiveShell.confirm_exit = False

c.PlainTextFormatter.max_seq_length = 30
c.PlainTextFormatter.pprint = False
